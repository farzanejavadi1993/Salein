<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/SplashScreenFragment">



    <fragment
        android:id="@+id/SplashScreenFragment"
        android:name="ir.kitgroup.saleindemo.ui.splashscreen.SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            app:popUpTo="@id/SplashScreenFragment"
            app:popUpToInclusive="true"
            android:id="@+id/actionGoToLoginFragment"
            app:destination="@id/LoginFragment" />
        <action
            app:popUpTo="@id/SplashScreenFragment"
            app:popUpToInclusive="true"
            android:id="@+id/actionGoToMainFragment"
            app:destination="@id/MainFragment" />

        <action
            app:popUpTo="@id/SplashScreenFragment"
            app:popUpToInclusive="true"
            android:id="@+id/actionGoToCompanyFragment"
            app:destination="@id/CompanyFragment" />
    </fragment>


    <fragment
        android:id="@+id/CompanyFragment"
        android:name="ir.kitgroup.saleindemo.ui.companies.CompanyFragment"
        tools:layout="@layout/fragment_stories" >


    </fragment>


    <fragment
        android:id="@+id/LoginFragment"
        android:name="ir.kitgroup.saleindemo.ui.logins.LoginFragment"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/actionGoToVerifyFragment"
            app:destination="@id/VerifyFragment" />
        <action

            android:id="@+id/actionGoToRulesFragment"
            app:destination="@id/RulesFragment" />
    </fragment>


    <fragment
        android:id="@+id/StoreFragment"
        android:name="ir.kitgroup.saleindemo.ui.companies.CompanyFragment"
        tools:layout="@layout/fragment_stories" >


    </fragment>





    <fragment
        android:id="@+id/MainFragment"
        android:name="ir.kitgroup.saleindemo.ui.launcher.homeItem.MainFragment"
        tools:layout="@layout/fragment_main" >

        <action
            android:id="@+id/actionGotoInvoiceFragment"
            app:destination="@id/InvoiceFragment" />
        <action
            android:id="@+id/actionGoToMoreFragment"
            app:destination="@id/MoreFragment" />

        <argument
            android:name="Inv_GUID"
            app:argType="string" />

        <action
            android:id="@+id/actionGoToFilterFragment"
            app:destination="@id/FilterFragment" />
    </fragment>

    <fragment
        android:id="@+id/PaymentFragment"
        android:name="ir.kitgroup.saleindemo.ui.payment.PaymentFragment"
        tools:layout="@layout/fragment_payment" >

        <action
            android:id="@+id/actionGoToRegisterFragment"
            app:destination="@id/RegisterFragment" />

        <argument
            android:name="Edit"
            app:argType="boolean" />


    </fragment>


    <fragment
        android:id="@+id/InvoiceFragment"
        android:name="ir.kitgroup.saleindemo.ui.launcher.invoiceItem.InVoiceDetailFragment"
        tools:layout="@layout/invoice_list_item_recycle" >
        <action
            android:id="@+id/actionGoToMainFragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/actionGoToPaymentFragment"
            app:destination="@id/PaymentFragment" />
        <argument
            android:name="type"
            app:argType="string" />
        <argument
            android:name="edit"
            app:argType="boolean" />


    </fragment>


    <fragment
        android:id="@+id/FilterFragment"
        android:name="ir.kitgroup.saleindemo.ui.launcher.homeItem.FilterFragment"
        tools:layout="@layout/filter_fragment" >

        <argument
            android:name="filter"
            app:argType="boolean" />


    </fragment>

    <fragment
        android:id="@+id/MoreFragment"
        android:name="ir.kitgroup.saleindemo.ui.launcher.moreItem.MoreFragment"
        tools:layout="@layout/more_fragment" >

    </fragment>


    <fragment
        android:id="@+id/RegisterFragment"
        android:name="ir.kitgroup.saleindemo.ui.logins.RegisterFragment"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/actionGoToMapFragment"
            app:destination="@id/MapFragment" />
        <argument
            android:name="from"
            app:argType="string" />

        <argument
            android:name="mobile"
            app:argType="string" />



    </fragment>





    <fragment
        android:id="@+id/RulesFragment"
        android:name="ir.kitgroup.saleindemo.ui.logins.RulesFragment"
        tools:layout="@layout/fragment_rules" >

    </fragment>



    <fragment
        android:id="@+id/MapFragment"
        android:name="ir.kitgroup.saleindemo.ui.map.MapFragment"
        tools:layout="@layout/fragment_map" >
        <argument
            android:name="from"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/VerifyFragment"
        android:name="ir.kitgroup.saleindemo.ui.logins.VerifyFragment"
        tools:layout="@layout/fragment_verify" >

        <action
            app:popUpTo="@id/VerifyFragment"
            app:popUpToInclusive="true"
            android:id="@+id/actionGoToMainFragment"
            app:destination="@id/MainFragment"
            />
        <action
            app:popUpTo="@id/VerifyFragment"
            app:popUpToInclusive="true"
            android:id="@+id/actionGoToCompanyFragment"
            app:destination="@id/CompanyFragment"
            />
        <action
            app:popUpTo="@id/VerifyFragment"
            app:popUpToInclusive="true"
            android:id="@+id/actionGoToRegisterFragment"
            app:destination="@id/RegisterFragment"
            />
        <argument
            android:name="mobile"
            app:argType="string" />
        <argument
            android:name="code"
            app:argType="integer" />
    </fragment>









</navigation>