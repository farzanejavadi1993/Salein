<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:focusable="true"
       android:clickable="true"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/order_list_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/order_list_date_bottom">


            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_mobile_size" />

            <TextView

                android:id="@+id/txt_number_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_mobile_size" />

            <TextView
                android:id="@+id/txt_type_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_toLeftOf="@+id/txt_number_table"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_mobile_size" />

            <TextView
                android:id="@+id/tvName_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_mobile_size" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/order_list_layout_sumPrice_detail_order"
            android:layout_below="@+id/order_list_date_layout"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_detail_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_list_layout_sumPrice_detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/order_sum_price_order_list_layout"
            android:elevation="@dimen/margin4"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="8sp">

                <TextView
                    android:id="@+id/order_list_sumPrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="@string/sum_price"
                    android:textColor="@color/black_l"
                    android:textSize="@dimen/text_medium_mobile_size"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/sumPrice_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:text="@string/rial_0"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_medium_mobile_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8sp">

                <TextView
                    android:id="@+id/order_list_purePrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="@string/pure_price"
                    android:textColor="@color/black_l"
                    android:textSize="@dimen/text_medium_mobile_size"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/purePrice_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:text="@string/rial_0"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_medium_mobile_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8sp">

                <EditText
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/border_edittext"
                    android:fontFamily="@font/iransans"
                    android:hint="@string/description"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black_l"
                    android:textDirection="firstStrongRtl"
                    android:textSize="@dimen/text_medium_mobile_size"
                    android:inputType="text"
                    tools:ignore="Autofill" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="10dp"
                android:gravity="center|bottom">


                <TextView

                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/order_item_recycle_group__card_background"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="@string/continue_"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</layout>
