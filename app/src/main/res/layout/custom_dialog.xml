<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="92dp"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300sp"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="10dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:strokeColor="#2f2f2f"
            app:strokeWidth="0.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                    <TextView

                       android:layout_margin="@dimen/margin10"
                        android:id="@+id/tv_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#2f2f2f"
                        android:textSize="12sp" />



                <RelativeLayout
                    android:id="@+id/layoutButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_message"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="100sp"
                        android:textSize="12sp"
                        android:fontFamily="@font/iransans"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="8sp"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="@color/white"
                        android:text="@string/no"
                        android:textColor="@color/invite_friend_color"
                        app:cornerRadius="15dp"
                        app:strokeColor="@color/invite_friend_color"
                        app:strokeWidth="1dp"
                        tools:ignore="UnusedAttribute" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ok"
                        android:textSize="12sp"
                        android:fontFamily="@font/iransans"
                        android:layout_width="100sp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="8sp"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="@color/white"
                        android:text="@string/ok"
                        android:textColor="@color/colorGreenLight"
                        app:cornerRadius="15dp"
                        app:strokeColor="@color/colorGreenLight"
                        app:strokeWidth="1dp"
                        tools:ignore="UnusedAttribute" />

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_returned"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv_message"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_return"
                    android:fontFamily="@font/iransans"
                    android:text="@string/returned"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/margin10" />
            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</RelativeLayout>


