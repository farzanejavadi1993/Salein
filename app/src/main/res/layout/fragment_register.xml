<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_background_color"
        android:clickable="true"
        android:focusable="true">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="@dimen/login_toolbar_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop">


            <TextView

                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/complete_information"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />


        </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/cardInfoCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <TextView
                android:id="@+id/textView2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:text="لطفا در وارد کردن اطلاعات دقت کنید سفارشات به اطلاعات درج شد در این قسمت ارسال خواهد شد."
                android:textColor="#474747"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:text="@string/firstname_lastname_customer_description"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_F_L_name_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:background="@drawable/background_edittext"
                android:fontFamily="@font/iransans"
                android:gravity="right"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameCustomer"
                tools:ignore="Autofill,LabelFor" />


            <TextView
                android:id="@+id/tvPhoneNumberCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:text="@string/phone_number_customer"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_number_phone_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:background="@drawable/background_edittext"
                android:enabled="false"
                android:fontFamily="@font/iransans"
                android:gravity="right"
                android:inputType="number"
                android:layoutDirection="rtl"
                android:maxLength="11"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberCustomer"
                tools:ignore="Autofill,LabelFor,TextFields" />


            <TextView
                android:id="@+id/tvAddressCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:text="@string/address_customer"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:background="@drawable/background_edittext"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:id="@+id/edt_address_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin8"
                    android:fontFamily="@font/iransans"
                    android:gravity="right|top|center"
                    android:inputType="textShortMessage|textMultiLine"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"

                    android:singleLine="false"
                    android:textColor="@color/medium_color"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:text="آدرس دقیق تر خود را وارد کنید."
                    android:gravity="right"
                    android:textSize="12dp"
                    android:textColor="@color/green_table"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText

                    android:hint="توضیحات تکمیلی..."
                    android:id="@+id/edt_address_customer_complete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/iransans"
                    android:gravity="right|top|center"
                    android:inputType="textShortMessage|textMultiLine"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:singleLine="false"
                    android:textColor="@color/medium_color"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>



            <TextView

                android:id="@+id/tvPlaqueCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:text="@string/Plaque_customer"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_plaque_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_left_right_margin"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:background="@drawable/background_edittext"
                android:fontFamily="@font/iransans"
                android:gravity="right"
                android:inputType="number"
                android:layoutDirection="rtl"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberCustomer"
                tools:ignore="Autofill,LabelFor" />

            <RadioGroup

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:fontFamily="@font/iransans"
                    android:gravity="right"
                    android:text="@string/woman"
                    android:textColor="@color/medium_color"
                    android:textSize="@dimen/text_medium_mobile_size" />

                <RadioButton

                    android:id="@+id/radioMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:fontFamily="@font/iransans"
                    android:gravity="right"
                    android:text="@string/man"
                    android:textColor="@color/medium_color"
                    android:textSize="@dimen/text_medium_mobile_size" />
            </RadioGroup>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/recyclerView"
           />

        <FrameLayout

            android:id="@+id/layoutMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">




            <com.cedarstudios.cedarmapssdk.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:mapbox_cameraZoom="14"

                />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_location"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_floating"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="@dimen/margin6"
                android:backgroundTint="#eee"
                android:src="@drawable/ic_cross"
                app:elevation="6dp"
                app:fabSize="normal"
                app:pressedTranslationZ="12dp" />

            <com.google.android.material.card.MaterialCardView

                android:id="@+id/card_address"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_toRightOf="@+id/floating"
                android:backgroundTint="#eee"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/purple_700"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
             >

                    <EditText
                        android:paddingStart="5dp"
                       android:paddingEnd="5dp"
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:fontFamily="@font/iransans"
                        android:hint=""
                        android:inputType="textShortMessage|textMultiLine"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:gravity="right"
                       android:padding="5dp"
                        android:id="@+id/edt_address_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edt_address"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@android:color/transparent"
                        android:enabled="true"
                        android:fontFamily="@font/iransans"
                        android:hint="توضیحات تکمیلی..."
                        android:inputType="textShortMessage|textMultiLine"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/pro"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_height_size"
            android:layout_marginStart="@dimen/normal_left_right_margin"
            android:layout_marginEnd="@dimen/normal_left_right_margin"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/purple_700"
            android:fontFamily="@font/iransans"
            android:text="@string/register_gps"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/box_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnusedAttribute" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btn_register_information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardInfoCustomer" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>