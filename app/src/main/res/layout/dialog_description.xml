<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="450sp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/card_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="87sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/saleinicon128" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_iv"
            android:layout_margin="4sp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin10"
                app:strokeWidth="0.5dp"
                app:strokeColor="#2f2f2f"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_gravity="center"
                        android:id="@+id/recyclerView_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_type_order"
                        />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_number_table"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="@dimen/margin8"
                        android:backgroundTint="#eee"
                        app:cardCornerRadius="12dp">

                        <EditText
                            android:padding="10dp"
                            android:id="@+id/edt_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top|right"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@android:color/transparent"
                            android:drawingCacheQuality="low"
                            android:fontFamily="@font/iransans"
                            android:hint="توضیحات"
                            android:inputType="text"
                            android:textColor="#474747"
                            android:textSize="12sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <RelativeLayout
                        android:id="@+id/layoutButtons"
                        android:layout_marginRight="15sp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_message"
                        android:orientation="horizontal">


                        <com.google.android.material.button.MaterialButton
                           android:layout_centerInParent="true"
                            android:id="@+id/btn_register_description"
                            android:backgroundTint="@color/white"
                            app:strokeWidth="1dp"
                            app:cornerRadius="15dp"
                            android:text="ثبت"
                            android:textColor="@color/colorGreenLight"
                            app:strokeColor="@color/colorGreenLight"
                            android:layout_margin="8sp"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp">
                        </com.google.android.material.button.MaterialButton>

                    </RelativeLayout>



                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>