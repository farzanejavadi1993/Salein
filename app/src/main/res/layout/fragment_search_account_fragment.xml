<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="#e7e8ee"
    android:focusable="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:gravity="right"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white"
        android:elevation="@dimen/margin4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:layout_marginStart="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/btn_sync_account"
                android:layout_centerVertical="true"
                android:background="@drawable/sync_account_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_filter"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_sync"
                    android:padding="3dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </RelativeLayout>
            <RelativeLayout

                android:layout_toRightOf="@+id/btn_sync_account"
                android:layout_marginStart="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/btn_add_account"
                android:layout_centerVertical="true"
                android:background="@drawable/sync_account_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_add_account"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_plus"
                    android:padding="3dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </RelativeLayout>

            <ImageView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="24dp"
                android:layout_height="24dp"/>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:id="@+id/content_two_edittext"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView

                android:layout_centerHorizontal="true"

                android:layout_width="match_parent"
                app:strokeWidth="0.5dp"
                app:strokeColor="#ccc"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/margin8"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp">

                <EditText

                    android:gravity="right"

                    android:id="@+id/edt_search_account"
                    android:hint="(موبایل/نام)جستجوی مشتری"
                    android:layout_toLeftOf="@+id/iv_search_account"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:drawingCacheQuality="low"
                    android:fontFamily="@font/iransans"
                    android:textColor="#474747"
                    android:textSize="12sp" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:id="@+id/recyclerView_name_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:textStyle="bold"
        android:id="@+id/tv_choose_type_order"
        android:layout_marginRight="22dp"
        android:layout_marginTop="12dp"
        android:text="نوع سفارش را انتخاب کنید"
        android:textSize="12dp"
        android:textColor="#474747"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_type_order"
        android:layout_marginLeft="@dimen/margin8"
        android:layout_marginRight="@dimen/margin8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>








    <com.google.android.material.button.MaterialButton

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:id="@+id/btn_order"
        android:fontFamily="@font/iransans"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="22dp"
        android:backgroundTint="@color/white"
        android:text="سفارش گیری"
        android:textColor="@color/colorGreenLight"
        app:cornerRadius="15dp"
        app:strokeColor="@color/colorGreenLight"
        app:strokeWidth="1dp"></com.google.android.material.button.MaterialButton>

</RelativeLayout>