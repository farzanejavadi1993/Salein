<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_item_recycle_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/order_item_recycle_group_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
       style="@style/bold_text"
        android:textColor="@color/color_text_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="مواد غذایی" />

    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/background_view"
        android:id="@+id/viewGroup"
        android:layout_below="@+id/order_item_recycle_group_txt_name"
        android:layout_width="0dp"
        android:layout_height="3.5dp"
        app:layout_constraintEnd_toEndOf="@+id/order_item_recycle_group_txt_name"
        app:layout_constraintStart_toStartOf="@+id/order_item_recycle_group_txt_name"
        app:layout_constraintTop_toBottomOf="@+id/order_item_recycle_group_txt_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>