<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout

            android:id="@+id/splashlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/btnWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_warning"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                   />

                <RelativeLayout
                    android:id="@+id/btn_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_warning"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/ivResend"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/txtErrorr"
                        app:srcCompat="@drawable/ic_resend" />

                    <TextView

                        android:id="@+id/txtErrorr"
                        style="@style/bold_text"
                        android:layout_centerInParent="true"
                        android:layout_margin="8dp"
                        android:gravity="right"
                        android:padding="2dp"
                        android:textColor="#FF0E0E" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView

                android:id="@+id/animation_view"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                tools:ignore="ContentDescription" />


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true"
                tools:ignore="ContentDescription"
                android:id="@+id/halloweenLottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tvversion"
            style="@style/bold_text"
            android:layout_above="@+id/tvDevelop"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:textColor="@color/color_accent" />


        <TextView
            android:textColorLink="@color/color_accent"
            android:id="@+id/tvDevelop"
            style="@style/bold_text"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="@string/link_KitGroup" />
    </RelativeLayout>
</layout>
