<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:focusable="true"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="450sp"
        android:layout_height="wrap_content">



        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical"
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_close_add_dialog"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_close"
                    android:layout_margin="8dp"
                    android:layout_gravity="right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="@dimen/margin8"
                    android:layout_marginRight="22dp"
                    android:backgroundTint="#eee"
                    app:cardCornerRadius="12dp">

                    <EditText

                        android:id="@+id/edt_address"
                        android:layout_width="343dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@android:color/transparent"
                       android:gravity="right"
                        android:fontFamily="@font/iransans"
                        android:hint="نام و نام خانوادگی مشتری"
                        android:textColor="#474747"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="@dimen/margin8"
                    android:layout_marginRight="22dp"
                    android:backgroundTint="#eee"
                    app:cardCornerRadius="12dp">

                    <EditText
                        android:maxLength="11"
                        android:inputType="number"
                        android:id="@+id/edt_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@android:color/transparent"
                        android:drawingCacheQuality="low"
                        android:fontFamily="@font/iransans"
                        android:hint="شماره موبایل مشتری"
                        android:textColor="#474747"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="@dimen/margin8"
                    android:layout_marginRight="22dp"
                    android:backgroundTint="#eee"
                    app:cardCornerRadius="12dp">

                    <EditText
                        android:id="@+id/edt_pelaque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@android:color/transparent"
                        android:drawingCacheQuality="low"
                        android:fontFamily="@font/iransans"
                        android:hint="آدرس مشتری"
                        android:textColor="#474747"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>


                <RadioGroup
                    android:layout_marginTop="@dimen/margin8"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radioWoman"
                        android:layout_marginRight="22dp"
                        android:textColor="#474747"
                        android:textSize="12dp"
                        android:text="زن"
                        android:fontFamily="@font/iransans"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:fontFamily="@font/iransans"
                        android:id="@+id/radioMan"
                        android:layout_marginRight="22dp"
                        android:textColor="#474747"
                        android:textSize="12dp"
                        android:text="مرد"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_marginLeft="22dp"
                    android:fontFamily="@font/iransans"
                    android:layout_marginBottom="22dp"
                    android:id="@+id/btn_register_address"
                    android:layout_marginRight="22dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="ثبت و بازگشت "
                    android:background="@drawable/background_return"
                    android:layout_height="38dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>


</RelativeLayout>
