<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/red_table"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/viewLauncher"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4sp">

            <TextView

                android:id="@+id/txt_title_toolbar"
                style="@style/launcher_toolbar_TextView"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="نمایش اطلاعات کاربری"
                android:textStyle="bold" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="نام و نام خانواگی"
                android:textColor="#474747"
                android:textSize="13sp"
               />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="فرزانه جوادی بایگی"
                android:textColor="#474747"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="شماره تلفن همراه"
                android:textColor="#474747"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="09150469164"
                android:textColor="#474747"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="آدرس"
                android:textColor="#474747"
                android:textSize="13sp"
              />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="مشهد بولوار هدایت"
                android:textColor="#474747"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="افزایش اعتبار کیف پول"
                android:textColor="#474747"
                android:textSize="12sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/app_off"
                android:layout_width="30dp"
                android:layout_height="30dp"
              />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نظرات من"
                android:textColor="#474747"
                android:textSize="12sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogOut"
        android:fontFamily="@font/iransans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="22dp"
        android:backgroundTint="@color/red_table"
        android:text="خروج از حساب"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:strokeColor="@color/red_table"
        app:strokeWidth="1dp" />
</RelativeLayout>




