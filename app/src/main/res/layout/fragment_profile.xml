<?xml version="1.0" encoding="utf-8"?>

<layout >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="RedundantNamespace">

    <TextView
        android:id="@+id/txtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/red_table"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/viewLauncher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4sp"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/txt_title_toolbar"
                style="@style/launcher_toolbar_TextView"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_left_right_margin"
                android:gravity="center"
                android:text="@string/info_account"
                android:textStyle="bold"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/normal_left_right_margin"
            android:layout_marginRight="@dimen/normal_left_right_margin"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <ImageView
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:id="@+id/iv_profile"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_last_name"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
               />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="فرزانه جوادی بایگی"
                android:textColor="@color/medium_color"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/normal_left_right_margin"
            android:layout_marginRight="@dimen/normal_left_right_margin"
            android:background="#ccc" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <ImageView

                android:layout_centerVertical="true"
                android:padding="5dp"
                android:id="@+id/iv_phone"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_phone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_account"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_large_mobile_size"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin10"
                android:layout_alignParentLeft="true"
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="09150469164"
                android:textColor="@color/medium_color"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/normal_left_right_margin"
            android:layout_marginRight="@dimen/normal_left_right_margin"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:id="@+id/iv_address"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_toLeftOf="@+id/iv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="@color/medium_color"
                    android:textSize="@dimen/text_large_mobile_size"
                    />
            </RelativeLayout>


            <TextView
             android:layout_marginTop="@dimen/margin2"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="مشهد بولوار هدایت"
                android:textColor="@color/medium_color"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_credit"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/app_off"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="ContentDescription" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="22dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_comment"
                android:textColor="#474747"
                android:textSize="12sp"
                android:textStyle="bold" />
            <ImageView
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="ContentDescription" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#ccc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/normal_left_right_margin"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="@dimen/normal_left_right_margin"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:id="@+id/btn_order_list"
            android:paddingBottom="5dp"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_order"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold" />
            <ImageView
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_buylist"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="ContentDescription" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/normal_left_right_margin"
            android:layout_marginRight="@dimen/normal_left_right_margin"
            android:background="#ccc" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogOut"
        android:fontFamily="@font/iransans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="22dp"
        android:backgroundTint="@color/red_table"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xx_large_mobile_size"
        app:strokeColor="@color/red_table"
        app:strokeWidth="1dp"
        tools:targetApi="lollipop" />
</RelativeLayout>

</layout>




