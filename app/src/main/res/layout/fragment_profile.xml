<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/iv_back_fragment"
                android:layout_width="@dimen/icon_normal_size"
                android:layout_height="@dimen/icon_normal_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:rotationY="180"
                app:srcCompat="@drawable/ic_fi_rr_angle_small_left"
                tools:ignore="ContentDescription" />

            <TextView

                android:textColor="@color/white"
                style="@style/launcher_toolbar_TextView"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_toLeftOf="@+id/iv_back_fragment"
                android:gravity="center"
                android:text="حساب کاربری"
                android:textStyle="bold" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/curve_background" >

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_weight="1"
                    android:text="Button"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="15dp"
                  >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="55dp"
                            android:gravity="center"
                            android:id="@+id/txtName"
                            android:textColor="@color/medium_color"
                            android:textSize="13dp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layout_toLeftOf="@+id/ivPhone"
                                android:gravity="right"
                                android:text="شماره تلفن"
                                android:textColor="#818181"
                                android:textSize="13dp" />


                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layout_toLeftOf="@+id/ivPhone"
                                android:gravity="right"
                                android:textColor="@color/medium_color"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:layout_marginRight="35dp"
                                android:background="#eee" />
                        </LinearLayout>


                        <RelativeLayout

                            android:id="@+id/cardAddress1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_alignParentRight="true"
                                android:id="@+id/address1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_marginRight="16dp"
                                android:text="آدرس 1"
                                android:textColor="#818181"
                                android:textSize="13dp" />



                            <TextView

                                android:id="@+id/tvAddress1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/address1"
                                android:layout_marginRight="@dimen/margin10"
                                android:layout_toLeftOf="@+id/ivPhone"
                                android:textColor="@color/medium_color"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tvAddress1"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:layout_marginRight="35dp"
                                android:background="#eee" />


                        </RelativeLayout>


                        <RelativeLayout
                           android:visibility="gone"
                            android:id="@+id/cardAddress2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/address2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16dp"
                                android:gravity="right"
                                android:text="آدرس 2"
                                android:textColor="#818181"
                                android:textSize="13dp" />


                            <TextView

                                android:id="@+id/tvAddress2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/address2"
                                android:layout_marginRight="@dimen/margin10"
                                android:layout_toLeftOf="@+id/ivPhone"
                                android:textColor="@color/medium_color"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tvAddress2"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:layout_marginRight="35dp"
                                android:background="#eee" />


                        </RelativeLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.5">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </RelativeLayout>

</layout>