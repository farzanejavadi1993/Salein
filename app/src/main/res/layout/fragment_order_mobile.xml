<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="8dp"
                android:background="@color/white"
                android:elevation="@dimen/margin4"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                tools:ignore="UnusedAttribute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin8"
                        android:layout_toRightOf="@+id/order_name_customer">

                        <ImageView
                            android:id="@+id/iv_search"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin8"
                            android:layout_marginRight="@dimen/margin8"
                            android:src="@drawable/ic_search"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@+id/edt_search_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_search"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/iransans"
                            android:gravity="right"
                            android:hint="@string/search_product"
                            android:inputType="text"
                            android:textColor="@color/medium_color"
                            android:textSize="12sp"
                            tools:targetApi="lollipop" />
                    </RelativeLayout>


                    <com.google.android.material.card.MaterialCardView

                        android:id="@+id/btn_add_account"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin10"
                        android:backgroundTint="#e7e8ee"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:targetApi="lollipop">

                        <ImageView
                            android:id="@+id/iv_add_account"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/ic_plus_black"
                            tools:ignore="ContentDescription" />

                    </com.google.android.material.card.MaterialCardView>

                    <EditText
                        android:id="@+id/order_name_customer"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:layout_marginLeft="@dimen/margin8"
                        android:layout_toRightOf="@+id/btn_add_account"

                        android:gravity="center"
                        android:hint="@string/name_customer"
                        android:paddingLeft="@dimen/order_toolbar_user_button_left_right_margin"
                        android:paddingTop="5dp"
                        android:paddingRight="@dimen/order_toolbar_user_button_left_right_margin"
                        android:paddingBottom="5dp"
                        android:textColor="@color/medium_color"
                        android:textColorHint="#474747"
                        android:textSize="@dimen/text_normal_mobile_size"
                        android:inputType="text"
                        tools:ignore="Autofill" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/accountRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_recyclerView_productLevel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/normal_left_right_margin"
                android:layoutDirection="rtl" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_recyclerView_productLevel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="@dimen/normal_left_right_margin" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_recyclerView_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="@dimen/order_main_layout_top_bottom_margin"

                android:layoutDirection="rtl"

                />


        </LinearLayout>

<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_700"
    android:layout_alignParentBottom="true"
    android:layout_margin="@dimen/margin10"
    app:cardCornerRadius="20dp"

    android:id="@+id/btn_register_order"
   >

        <TextView
            android:gravity="center"
            android:id="@+id/order_list_tv_register"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:fontFamily="@font/iransans"
            android:text="@string/complete_order"
            android:textColor="@color/white"
            android:textSize="12sp" />



</com.google.android.material.card.MaterialCardView>



        <TextView
            android:visibility="gone"
            android:id="@+id/order_txt_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/normal_left_right_margin"
            android:gravity="center"
            android:textColor="@color/black_l"
            android:textSize="@dimen/text_normal_mobile_size" />
    </RelativeLayout>


</layout>








