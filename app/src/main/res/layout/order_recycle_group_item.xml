<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item_recycle_card"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_below="@+id/order_img_logo"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/order_item_recycle_group_card_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/order_item_recycle_group_padding">



    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/order_item_recycle_group_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black_l"
        android:textSize="11sp" />
</RelativeLayout>