<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEF1"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation_view_linear"

            >

            <LinearLayout

                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginRight="12dp"
                    android:elevation="@dimen/margin4"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    tools:ignore="UnusedAttribute">

                    <LinearLayout
                        android:id="@+id/layout_search_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_edittext"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/layout_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/background_edittext"
                            android:padding="5dp"
                            android:visibility="gone">


                            <ImageView
                                android:id="@+id/btn_add_account"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_plus_black"
                                tools:ignore="ContentDescription" />


                            <EditText
                                android:id="@+id/name_customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin8"
                                android:layout_toRightOf="@+id/btn_add_account"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/iransans"
                                android:gravity="right|center_vertical"
                                android:hint="جستجوی نام مشترک"
                                android:inputType="text"
                                android:paddingStart="16dp"
                                android:paddingTop="6dp"
                                android:paddingEnd="16dp"
                                android:paddingBottom="6dp"
                                android:textColor="@color/medium_color"
                                android:textSize="@dimen/text_normal_mobile_size"
                                tools:ignore="Autofill" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/define_company"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin10">


                            <com.github.siyamed.shapeimageview.CircularImageView
                                android:id="@+id/iv_icon_company"
                                android:layout_width="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_height="20dp"
                                android:src="@drawable/salein"
                                app:siBorderColor="#EEEEF1" />

                            <TextView
                               android:layout_centerHorizontal="true"
                                android:layout_below="@+id/iv_icon_company"
                                android:id="@+id/tv_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin8"

                                android:textColor="@color/purple_700"
                                android:textSize="8sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/layout_search_product"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/background_edittext">

                            <ImageView
                                android:id="@+id/iv_search"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin8"
                                android:layout_marginRight="@dimen/margin8"
                                android:src="@drawable/ic_search"
                                tools:ignore="ContentDescription" />


                            <EditText

                                android:id="@+id/edt_search_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/iv_search"
                                android:background="@drawable/background_edittext"
                                android:backgroundTint="@android:color/transparent"
                                android:fontFamily="@font/iransans"
                                android:gravity="right"
                                android:hint="@string/search_product"
                                android:inputType="text"
                                android:textColor="@color/medium_color"
                                android:textSize="12sp"
                                tools:targetApi="lollipop" />


                        </RelativeLayout>



                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/accountRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_recyclerView_productLevel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="9.5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_recyclerView_productLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginEnd="9.5dp"
                    android:layoutDirection="rtl" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_recyclerView_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layoutDirection="rtl"

                    />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_register_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin10"
                android:backgroundTint="@color/purple_700"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/order_list_tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin10"
                    android:fontFamily="@font/iransans"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:text="@string/complete_order"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/order_txt_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/normal_left_right_margin"
                android:gravity="center"
                android:textColor="@color/black_l"
                android:textSize="@dimen/text_normal_mobile_size"
                android:visibility="gone" />
        </RelativeLayout>

        <FrameLayout

            android:id="@+id/frame_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation_view_linear" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view_linear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:backgroundTint="@color/very_light"
            android:elevation="8dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:textDirection="rtl"
            app:itemIconSize="20dp"
            app:itemIconTint="@drawable/navigation_view_colored"
            app:itemTextColor="@drawable/navigation_view_colored"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"
            tools:targetApi="lollipop">

        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </RelativeLayout>

</layout>