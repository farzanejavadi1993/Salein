<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEF1"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout

                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginRight="12dp"
                    android:elevation="@dimen/margin4"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    tools:ignore="UnusedAttribute">

                    <RelativeLayout
                        android:id="@+id/layout_search_customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_edittext"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:id="@+id/layout_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="12dp"
                            android:layout_toRightOf="@+id/btn_filter"
                            android:background="@drawable/background_edittext"
                            android:visibility="gone"

                            >

                            <RelativeLayout
                                android:id="@+id/btn_filter_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/bookmark_search_layout_background"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView

                                    android:id="@+id/btn_add_account"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_plus_black"
                                    tools:ignore="ContentDescription" />
                            </RelativeLayout>


                            <EditText
                                android:id="@+id/edt_name_customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin8"
                                android:layout_toRightOf="@+id/btn_filter_add"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/iransans"
                                android:gravity="right|center_vertical"
                                android:hint="جستجوی نام مشتری"
                                android:inputType="text"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:textColor="@color/medium_color"
                                android:textSize="@dimen/text_normal_mobile_size"
                                tools:ignore="Autofill" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/btn_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/bookmark_search_layout_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivSearch"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:padding="5dp"
                                android:src="@drawable/ic_search" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginBottom="@dimen/margin2"
                            android:layout_marginTop="@dimen/margin2"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="12dp"
                            android:id="@+id/layout_address_branch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/btn_filter"
                            android:orientation="horizontal">



                            <RelativeLayout
                                android:id="@+id/btn_add_address"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/bookmark_search_layout_background"
                                android:padding="1dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" >
                                <ImageView
                                    android:id="@+id/iv_address"
                                    android:padding="@dimen/margin4"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_left_icon"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"/>
                                <TextView
                                    android:layout_marginRight="3dp"
                                    android:layout_toRightOf="@+id/iv_address"
                                    android:id="@+id/tvTitleaddress"
                                    android:text="ارسال به"
                                    android:textColor="@color/medium_color"
                                    android:textSize="11sp"
                                    android:singleLine="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_marginRight="3dp"
                                    android:id="@+id/tvAddress"
                                    android:layout_below="@+id/tvTitleaddress"
                                    android:text="مشهد خیابان یاس انتهای یاس 8"
                                    android:textColor="@color/purple_700"
                                    android:textSize="11sp"
                                    android:singleLine="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/bookmark_search_layout_background"
                                android:padding="1dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" >
                                <ImageView
                                    android:id="@+id/iv_store"
                                    android:padding="@dimen/margin4"
                                    android:layout_marginLeft="3dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                                <TextView

                                    android:layout_toLeftOf="@+id/iv_store"
                                    android:id="@+id/tvTitleStore"
                                    android:text="خرید از فروشگاه"
                                    android:textColor="@color/medium_color"
                                    android:textSize="11sp"
                                    android:singleLine="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView

                                    android:id="@+id/tvNameStore"
                                    android:layout_toLeftOf="@+id/iv_store"
                                    android:layout_below="@+id/tvTitleStore"
                                    android:text="گوشت دنیوی"
                                    android:textColor="@color/purple_700"
                                    android:textSize="11sp"
                                    android:singleLine="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/iv_store_left"
                                    android:padding="@dimen/margin4"
                                    android:layout_centerVertical="true"
                                    android:rotation="270"
                                    android:src="@drawable/ic_left_icon"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"/>

                            </RelativeLayout>
                        </LinearLayout>


                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_recyclerView_productLevel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="9.5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_recyclerView_productLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginEnd="9.5dp"
                    android:layoutDirection="rtl" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_recyclerView_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layoutDirection="rtl"

                    />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_register_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin10"
                android:backgroundTint="@color/purple_700"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/order_list_tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin10"
                    android:fontFamily="@font/iransans"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:text="@string/complete_order"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/accountRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="53dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_txt_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/normal_left_right_margin"
                android:gravity="center"
                android:textColor="@color/black_l"
                android:textSize="@dimen/text_normal_mobile_size"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>

</layout>