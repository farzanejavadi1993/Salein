<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCompany"
    android:layout_width="145dp"
    android:layout_height="45dp"
    android:layout_margin="@dimen/margin4"
    android:background="@drawable/background_inactive_company_item"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/tvDescription"
        style="@style/normal_text"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=" فروش انواع مواد پروتیینی و "
        android:textColor="@color/color_primary_very_dark"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/ivView"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivView" />

    <View
        android:id="@+id/ivView"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:background="@drawable/view_active_company"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameCompanyTest"
        style="@style/bold_text"
        android:layout_marginBottom="8dp"
        android:textColor="@color/color_primary_very_dark"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivView"
        app:layout_constraintEnd_toStartOf="@+id/ivView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        tools:text="مجموعه گوشت دنیوی" />

</androidx.constraintlayout.widget.ConstraintLayout>
