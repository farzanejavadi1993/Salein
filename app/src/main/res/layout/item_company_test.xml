<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_width="wrap_content"
    app:strokeWidth="1dp"
    app:strokeColor="@color/green"
    android:layout_marginLeft="@dimen/margin4"
    android:layout_marginTop="@dimen/margin4"
    android:layout_marginRight="@dimen/margin8"
    android:layout_marginBottom="@dimen/margin4"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/ivCompany"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/ic_fingili_kabab_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siBorderColor="#fff"
            app:siBorderWidth="1dp" />


        <TextView
            android:id="@+id/tvNameCompanyTest"
            style="@style/bold_text"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:text="گوشت دنیوی"
            app:layout_constraintEnd_toStartOf="@+id/ivCompany"
            app:layout_constraintTop_toTopOf="@+id/ivCompany" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/normal_text"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:gravity="right"
            android:text=" فروش انواع مواد پروتیینی و مواد لبنی در مشهد"
            app:layout_constraintBottom_toBottomOf="@+id/ivCompany"
            app:layout_constraintEnd_toStartOf="@+id/ivCompany"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameCompanyTest" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

