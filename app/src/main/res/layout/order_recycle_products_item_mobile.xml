<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_recycle_item_product_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/background_home"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/layout_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/order_recycle_item_product_img"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_centerHorizontal="true"
            app:siBorderColor="@color/white"
            app:siBorderWidth="0.5dp" />

        <RelativeLayout
            android:id="@+id/layout_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/iv_discount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:rotationY="180"
                app:srcCompat="@drawable/ic_discount" />

            <TextView
                android:id="@+id/order_recycle_item_product_discountPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="11dp"
                tools:text="ffff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_recycle_item_product_name"
            style="@style/bold_text"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/order_recycle_item_product_img"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="right|center_vertical"
            tools:text=" مواد غذایی سرشار از پروتیین مواد غذایی سرشار از پروتیین مواد غذایی سرشار از پروتیین  مواد غذایی سرشار از پروتیین" />


        <RelativeLayout
            android:id="@+id/l_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_recycle_item_product_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/order_recycle_item_product_price"

                style="@style/bold_text"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/color_accent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/order_recycle_item_product_old_price"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="25000 ریال" />


            <TextView
                android:id="@+id/order_recycle_item_product_old_price"

                style="@style/normal_text"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/black_l"
                tools:text="25000 ریال"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/card_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_Price"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp">


            <TextView

                android:id="@+id/edt_description_temp"
                style="@style/normal_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:fontFamily="@font/iransans"
                android:hint="توضیحات شما"
                android:singleLine="true"
                android:textSize="@dimen/text_medium_mobile_size" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_recycle_item_product_bottom_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_edit"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@+id/layout_Image">

            <ProgressBar
                android:indeterminateTint="@color/color_accent"
                android:id="@+id/progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layoutAmount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="12dp"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/unit"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/layoutAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/minus_background"
                    app:srcCompat="@drawable/ic_minus_red" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/unit"
                        style="@style/normal_text"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin4"
                        android:layout_toLeftOf="@+id/order_recycle_item_product_txt_amount"
                        android:singleLine="true"
                        tools:text="کیلوگرم" />

                    <EditText
                        android:id="@+id/order_recycle_item_product_txt_amount"
                        style="@style/normal_text"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="0"
                        android:textDirection="ltr"
                        android:visibility="gone" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_max"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin8"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginEnd="@dimen/margin8"
                    android:layout_marginBottom="@dimen/margin8"
                    android:background="@drawable/plus_background"
                    app:srcCompat="@drawable/ic_plus_white" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>