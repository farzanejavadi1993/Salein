<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/order_recycle_item_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/order_recycle_item_product_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                app:siBorderColor="#AAA9A9"
                app:siBorderWidth="0.5dp"
                app:siRadius="10dp" />



            <RelativeLayout
                android:id="@+id/layout_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin10">

                <ImageView

                    android:id="@+id/iv_discount"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_discount" />

                <TextView android:id="@+id/order_recycle_item_product_discountPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margin10"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/order_recycle_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginEnd="12dp"
            android:gravity="right"
            android:textColor="@color/medium_color"
            android:textSize="@dimen/text_normal_mobile_size" />


        <RelativeLayout
            android:id="@+id/l_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_recycle_item_product_name"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/layout_Image">

            <TextView
                android:id="@+id/order_recycle_item_product_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="250,000 ریال"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/text_medium_mobile_size" />

            <TextView
                android:id="@+id/order_recycle_item_product_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="------------------"
                android:textColor="@color/black_l"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/order_recycle_item_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="250,000 ریال"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/order_recycle_item_product_bottom_card"
            android:id="@+id/card_edit"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/layout_Image">


            <TextView
                android:id="@+id/edt_description_temp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="false"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:fontFamily="@font/iransans"
                android:hint="توضیحات شما"
                android:singleLine="true"
                android:textColor="#474747"
                android:textSize="@dimen/text_medium_mobile_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/order_recycle_item_product_bottom_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_Price"
            android:layout_toRightOf="@+id/layout_Image">


            <TextView
                android:visibility="gone"
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/iv_minus"
                android:singleLine="true"
                android:text="کیلو گرم"
                android:textColor="@color/medium_color"
                android:textSize="11sp"
               />

            <ImageView

                android:id="@+id/iv_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/order_recycle_item_product_txt_amount"
                android:background="@drawable/minus_background"
                android:src="@drawable/ic_minus_red" />


            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/unit"
                android:visibility="gone" />

            <EditText
                android:id="@+id/order_recycle_item_product_txt_amount"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_max"
                android:background="@drawable/background_edittext"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@color/medium_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_max"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/plus_background"
                android:src="@drawable/ic_plus_white"

                />


        </RelativeLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>


