<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                android:elevation="@dimen/login_toolbar_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop">

                <ImageView
                    android:id="@+id/iv_back_fragment"
                    android:layout_width="@dimen/icon_normal_size"
                    android:layout_height="@dimen/icon_normal_size"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/icon_normal_padding_size"
                    android:rotationY="180"
                    app:srcCompat="@drawable/ic_fi_rr_angle_small_left"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/confirm_code"
                    android:textColor="@color/medium_color"
                    android:textSize="@dimen/text_normal_mobile_size"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>


            <TextView

                android:id="@+id/tv_message"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="22dp"

                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xx_large_mobile_size" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/relativeLayout"
                android:id="@+id/image_logo"
                android:layout_centerHorizontal="true"
                 />


            <TextView
                android:id="@+id/tvEnterCode"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="22dp"

                android:layout_marginTop="220dp"
                android:layout_marginRight="26dp"
                android:gravity="right"
                android:text="@string/enter_code"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEnterCode"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">

                <in.aabhasjindal.otptextview.OtpTextView
                    android:id="@+id/otp_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/normalColor"
                    app:bar_enabled="true"
                    app:bar_height="0dp"
                    app:length="5"
                    app:otp_box_background_active="@drawable/otp_active"

                    app:otp_box_background_error="@drawable/otp_error"
                    app:otp_box_background_inactive="@drawable/otp_inactive"
                    app:otp_box_background_success="@drawable/otp_success"
                    app:otp_text_size="12dp"
                    app:width="40dp"

                    />
            </RelativeLayout>





            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />





        </RelativeLayout>


    </RelativeLayout>
</layout>