<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">





        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/login_toolbar_elevation"
            tools:targetApi="lollipop">


            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/login_register_text"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="22dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xx_large_mobile_size" />

        <ImageView

            android:id="@+id/image_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_welcome"
            android:layout_centerHorizontal="true"
             />


        <TextView
            android:id="@+id/tvEnterMobile"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:gravity="right"
            android:text="@string/enter_number"
            android:textColor="@color/medium_color"
            android:textSize="@dimen/text_normal_mobile_size"
            android:textStyle="bold" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvEnterMobile"
            android:id="@+id/layout_editText"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/background_edittext"
                android:fontFamily="@font/iransans"
                android:gravity="right"
                android:hint="@string/phone_number_account"
                android:inputType="number"
                android:maxLength="11"
                android:padding="15dp"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/edtMobile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>








        <com.google.android.material.button.MaterialButton
            android:layout_below="@+id/layout_editText"
            android:id="@+id/btn_login"
            android:layout_width="360dp"
            android:layout_height="@dimen/bottom_height_size"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/bottom_background_inActive_color"
            android:enabled="false"
            android:fontFamily="@font/iransans"
            android:text="@string/get_code"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/box_radius"
            tools:ignore="UnusedAttribute" />


        <LinearLayout
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:gravity="right|center_vertical"
            android:layout_below="@+id/btn_login"
            android:orientation="horizontal"
            android:id="@+id/layoutRule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="آن را می پذیرم."
                android:id="@+id/login_tv_rules2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                />

            <TextView
                android:text="  قوانین و مقررات "
                android:id="@+id/login_tv_rules1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:textSize="12sp"
                />

            <TextView
                android:text="با ثبت نام در سالین"
                android:id="@+id/login_tv_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                />

            <CheckBox
                android:layout_marginLeft="1dp"
                android:checked="true"
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</layout>