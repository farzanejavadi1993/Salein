<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_background_color"
        android:clickable="true"
        android:focusable="true">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="@dimen/login_toolbar_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/login_register_text"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>


        <ImageView
            android:src="@drawable/logogoosht"
            android:id="@+id/animation_view"
            android:layout_width="@dimen/login_logo_size"
            android:layout_height="@dimen/login_logo_size"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/login_logo_margin_left_right"
            android:layout_marginTop="@dimen/normal_margin_top"
            android:layout_marginEnd="@dimen/login_logo_margin_left_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="22dp"
            android:text="@string/welcome_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xx_large_mobile_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animation_view" />
        <TextView
            android:id="@+id/tvEnterMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:text="@string/enter_number"
            android:textColor="@color/medium_color"
            android:textSize="@dimen/text_normal_mobile_size"
            app:layout_constraintBottom_toTopOf="@+id/inputMobile"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputMobile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:hint="@string/mobile_number"
            android:layoutDirection="rtl"
            android:textColorHint="@color/hint_text_color"
            app:boxCornerRadiusBottomEnd="@dimen/box_radius"
            app:boxCornerRadiusBottomStart="@dimen/box_radius"
            app:boxCornerRadiusTopEnd="@dimen/box_radius"
            app:boxCornerRadiusTopStart="@dimen/box_radius"
            app:endIconContentDescription=""
            app:layout_constraintBottom_toTopOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:inputType="number"
                android:layoutDirection="ltr"
                android:maxLength="11"
                android:textSize="12sp"

                android:textColor="@color/medium_color"
                android:textAlignment="textStart"
                android:textDirection="firstStrongRtl" />


        </com.google.android.material.textfield.TextInputLayout>


        <ProgressBar

            android:visibility="gone"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/inputMobile"
            app:layout_constraintEnd_toEndOf="@+id/inputMobile"
            app:layout_constraintTop_toTopOf="@+id/inputMobile" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_height_size"
            android:backgroundTint="@color/bottom_background_inActive_color"
            android:enabled="false"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/iransans"
            android:text="@string/get_code"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/box_radius"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>