<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clickable="true"
        android:focusable="true">
     <!--   <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_login"
            android:layout_alignParentBottom="true"
            android:layout_width="300dp"
            android:background="@drawable/meat22"
            android:layout_height="300dp"/>-->

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:elevation="@dimen/login_toolbar_elevation"
            tools:targetApi="lollipop">


            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/login_register_text"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/text_normal_mobile_size"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>


        <TextView

            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="22dp"
            android:gravity="center"

            android:text="@string/welcome_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xx_large_mobile_size" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_welcome"

            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_logo" />


        <TextView
            android:id="@+id/tvEnterMobile"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="22dp"
            android:gravity="right"
            android:text="@string/enter_number"
            android:textColor="@color/medium_color"
            android:textSize="@dimen/text_normal_mobile_size"
            android:textStyle="bold" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"

            android:layout_marginStart="22dp"

            android:layout_marginEnd="22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvEnterMobile"
            android:id="@+id/layout_editText"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/background_edittext"
                android:fontFamily="@font/iransans"
                android:gravity="right"
                android:hint="@string/phone_number_account"
                android:inputType="number"
                android:maxLength="11"
                android:padding="15dp"
                android:textColor="@color/medium_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/edtMobile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>






        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="360dp"
            android:layout_height="@dimen/bottom_height_size"
            android:layout_below="@+id/layout_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/bottom_background_inActive_color"
            android:enabled="false"
            android:fontFamily="@font/iransans"
            android:text="@string/get_code"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/box_radius"
            tools:ignore="UnusedAttribute" />

    </RelativeLayout>

</layout>