<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_margin="2.5dp"
    android:id="@+id/order_item_recycle_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/order_img_logo"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:targetApi="lollipop">


    <TextView

        android:layout_centerVertical="true"
        android:id="@+id/order_item_recycle_subgroup_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/medium_color"
        android:textSize="@dimen/text_medium_mobile_size"
        />
</RelativeLayout>



