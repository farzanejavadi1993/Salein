<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView

            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/red_table"
            android:textSize="@dimen/text_normal_mobile_size" />



        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4dp"
            tools:targetApi="lollipop">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btn_logout">

                <RelativeLayout
                    android:layout_toLeftOf="@+id/rl_reserve_table"
                    android:layout_centerVertical="true"
                    android:id="@+id/rl_get_out_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/get_out_order"
                        android:layout_width="@dimen/filter_view_size"
                        android:layout_height="@dimen/filter_view_size"
                        android:layout_marginRight="@dimen/margin4"
                        android:background="@drawable/rectangle_table_pink"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:textSize="10sp"
                        android:text= "بیرون بر"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>




                <RelativeLayout
                    android:layout_toLeftOf="@+id/rl_busy_table"
                   android:layout_centerVertical="true"
                    android:id="@+id/rl_reserve_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/reserve_table"
                        android:layout_width="@dimen/filter_view_size"
                        android:layout_height="@dimen/filter_view_size"
                        android:layout_marginRight="@dimen/margin4"
                        android:background="@drawable/rectangle_table_blue"
                        android:padding="10dp"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:textSize="10sp"
                        android:text="رزرو"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>




                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:id="@+id/rl_busy_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/busy_table"
                        android:layout_width="@dimen/filter_view_size"
                        android:layout_height="@dimen/filter_view_size"
                        android:background="@drawable/rectangle_table_red"
                        android:padding="10dp"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:textSize="10sp"
                        android:text="مشغول"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>



                <RelativeLayout
                   android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_busy_table"
                    android:id="@+id/rl_vacant_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/vacant_table"
                    android:layout_width="@dimen/filter_view_size"
                    android:layout_height="@dimen/filter_view_size"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/rectangle_table_green"
                    android:padding="10dp"
                    tools:ignore="ContentDescription" />
                    <TextView
                        android:textSize="10sp"
                        android:text="خالی"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_vacant_table"
                    android:id="@+id/rl_whole_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_tik_black"
                        android:id="@+id/whole_table"
                        android:layout_width="@dimen/filter_view_size"
                        android:layout_height="@dimen/filter_view_size"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/rectangle_whole_table"
                        android:padding="10dp"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:textSize="10sp"
                        android:text="همه"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_logout"

                tools:ignore="ContentDescription" />


        </RelativeLayout>


       <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
           android:layout_width="match_parent"
           android:layout_below="@+id/toolbar"
           android:id="@+id/refreshLayout"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_marginBottom="60dp"
                   android:id="@+id/recycler_table"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:rotationY="180" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/recycle_get_out_order"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_marginStart="@dimen/normal_left_right_margin"
                   android:layout_marginTop="@dimen/margin10"
                   android:layout_marginEnd="@dimen/normal_left_right_margin"
                   android:rotationY="180" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ProgressBar

                       android:background="@drawable/ic_circle"
                       android:layout_centerInParent="true"
                       android:id="@+id/progressbar"
                       android:layout_width="30dp"
                       android:layout_height="30dp"/>
               </RelativeLayout>
           </RelativeLayout>

       </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





    </RelativeLayout>












</layout>