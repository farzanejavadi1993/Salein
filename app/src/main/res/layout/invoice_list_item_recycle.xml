<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/order_list_item_recycle_img_delete"

            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_list_item_recycle_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:textColor="@color/black_light"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/order_list_item_recycle_txt_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/order_list_item_recycle_txt_name"
                android:textColor="@color/invite_friend_color"
                android:textSize="11dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="12dp">

            <RelativeLayout
                android:id="@+id/layout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_minus_invoice"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/order_list_item_recycle_editText"
                    android:background="@drawable/minus_background"
                    app:srcCompat="@drawable/ic_minus_red" />

                <EditText
                    android:id="@+id/order_list_item_recycle_editText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_max_invoice"

                    android:background="@android:color/transparent"
                    android:fontFamily="@font/iransans"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:text="0 "
                    android:textColor="@color/black_l"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_max_invoice"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/plus_background"
                    app:srcCompat="@drawable/ic_plus_white" />

                <TextView
                    android:id="@+id/txtError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_minus_invoice"
                    android:textColor="@color/invite_friend_color"
                    android:textSize="11dp" />

            </RelativeLayout>


            <TextView

                android:id="@+id/order_list_item_recycle_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black_l"
                android:textSize="@dimen/order_list_item_recycle_txt_price_size" />

            <TextView

                android:id="@+id/order_list_item_recycle_txt_sumPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_list_item_recycle_txt_price"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"

                android:textColor="@color/black_light"
                android:textSize="11dp"
                android:textStyle="bold" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/order_list_item_recycle_img_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/margin10"
            app:srcCompat="@drawable/ic_close" />


        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
           android:layout_toRightOf="@+id/order_list_item_recycle_img_delete"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/margin10"
          />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin10">

        <TextView
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@font/iransans"
            android:gravity="right"
            android:hint=" توضیحات شما"
            android:textColor="#474747"
            android:textSize="11dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ccc" />
</LinearLayout>