<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/order_list_item_recycle_img_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:src="@drawable/ic_close" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/order_list_item_recycle_img_delete"
            android:layout_toRightOf="@+id/rl1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_list_item_recycle_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4sp"
                android:textColor="@color/black_light"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/order_list_item_recycle_txt_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/order_list_item_recycle_txt_name"
                android:textColor="@color/invite_friend_color"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_list_item_recycle_txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginRight="4sp"
            android:layout_toLeftOf="@+id/order_list_item_recycle_img_delete"
            android:textColor="@color/black_l"
            android:textSize="@dimen/order_list_item_recycle_txt_price_size" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/order_list_item_recycle_txt_sumPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black_light"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/order_list_item_recycle_editText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp"
                android:layout_toRightOf="@+id/order_list_item_recycle_txt_sumPrice"
                android:background="@drawable/order_list_item_recycle_ediittext_shape"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:padding="5sp"
                android:textColor="@color/black_l"
                android:textSize="11sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin10">

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@font/iransans"
            android:gravity="right"
            android:hint="توضیحات"
            android:textColor="#474747"
            android:textSize="11dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ccc" />
</LinearLayout>