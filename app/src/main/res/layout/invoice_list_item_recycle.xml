<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/order_list_item_recycle_img_delete"
            android:layout_marginRight="@dimen/margin10"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <RelativeLayout
            android:id="@+id/rl"
            android:gravity="right"
            android:layout_toLeftOf="@+id/order_list_item_recycle_img_delete"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4sp"
                android:id="@+id/order_list_item_recycle_txt_name"
                android:textSize="11sp"
                android:textColor="@color/black_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginRight="4dp"
                android:id="@+id/order_list_item_recycle_txt_discount"
                android:layout_toLeftOf="@+id/order_list_item_recycle_txt_name"
                android:textSize="11sp"
                android:textColor="@color/invite_friend_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/order_list_item_recycle_txt_price"
            android:layout_marginRight="4sp"
            android:layout_toLeftOf="@+id/order_list_item_recycle_img_delete"
            android:layout_below="@+id/rl"
            android:textColor="@color/black_l"
            android:textSize="@dimen/order_list_item_recycle_txt_price_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:textSize="11sp"
                android:textColor="@color/black_light"
                android:id="@+id/order_list_item_recycle_txt_sumPrice"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="numberDecimal"
                android:fontFamily="@font/iransans"
                android:id="@+id/order_list_item_recycle_editText"
                android:layout_marginRight="4sp"
                android:layout_marginLeft="4sp"
                android:layout_centerVertical="true"
                android:padding="5sp"
                android:background="@drawable/order_list_item_recycle_ediittext_shape"
                android:layout_toRightOf="@+id/order_list_item_recycle_txt_sumPrice"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/black_l"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/iv_description"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edit_blue"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <EditText
            android:textStyle="bold"
            android:enabled="false"
            android:gravity="right"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:textColor="#474747"
            android:textSize="11dp"
            android:fontFamily="@font/iransans"
            android:hint="توضیحات"
            android:background="@android:color/transparent"
            android:id="@+id/edt_description"
            android:layout_toLeftOf="@+id/iv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>






    <View
        android:layout_below="@+id/rl1"
        android:background="#ccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>