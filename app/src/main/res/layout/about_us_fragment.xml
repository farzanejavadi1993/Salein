<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="#fff"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4sp"
            tools:targetApi="lollipop">

            <ImageView

                android:id="@+id/iv_back_fragment"
                android:layout_width="@dimen/icon_normal_size"
                android:layout_height="@dimen/icon_normal_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:rotationY="180"
                android:src="@drawable/ic_fi_rr_angle_small_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_title_toolbar"
                style="@style/launcher_toolbar_TextView"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_toLeftOf="@+id/iv_back_fragment"
                android:gravity="center"
                android:text="درباره ما"
                android:textStyle="bold" />


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/txtDescription"
                   android:lineSpacingExtra="12dp"
                   android:textColor="#2f2f2f"
                   android:textSize="13sp"
                   android:layout_marginTop="12dp"
                   android:layout_marginBottom="12dp"
                   android:layout_marginLeft="22dp"
                   android:layout_marginRight="22dp"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:layout_below="@+id/txtDescription"
                   android:id="@+id/iv_logo"
                   android:layout_margin="22dp"
                   android:layout_alignParentLeft="true"
                   android:layout_width="80dp"
                   android:layout_height="80dp"/>

           </RelativeLayout>
        </androidx.core.widget.NestedScrollView>





    </LinearLayout>
</layout>