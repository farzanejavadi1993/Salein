<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="horizontal"
   >


    <LinearLayout
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginTop="@dimen/order_main_layout_top_bottom_margin"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical"
        android:id="@+id/order_card_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9.5">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/bottom_sheet"
                android:orientation="vertical"
                android:layout_weight="3.75"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/order_list_date_layout"
                    android:background="@drawable/shape_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                        <RelativeLayout
                            android:layout_marginLeft="@dimen/margin8"
                            android:layout_marginRight="@dimen/margin8"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/rl_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:padding="8dp"
                               android:layout_alignParentLeft="true"
                                android:layout_marginStart="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/btn_add_account"
                                android:layout_centerVertical="true"
                                android:background="@drawable/order_item_recycle_subgroup_card_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/iv_add_account"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_plus"
                                    android:padding="3dp"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"/>

                            </RelativeLayout>
                            <EditText

                                android:layout_toRightOf="@+id/btn_add_account"
                                android:background="@drawable/order_item_recycle_subgroup_card_background"
                                android:fontFamily="@font/iransans"
                                android:id="@+id/order_name_customer"
                                android:padding="@dimen/margin10"
                                android:hint="نام مشترک "
                                android:gravity="center"
                                android:layout_marginRight="@dimen/margin10"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:layout_marginLeft="4dp"
                                android:textSize="@dimen/order_toolbar_button_user_size"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>




                    <TextView

                        android:id="@+id/txt_number_table"
                        android:layout_marginRight="8sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="#fff"
                        android:textSize="11sp"
                        android:layout_below="@+id/rl_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/edt_type_order"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="10sp"
                        android:textColor="#fff"
                        android:textSize="11sp"
                        android:layout_below="@+id/rl_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tv_sumPrice_header"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#fff"
                        android:textSize="11sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:background="#eee"
                    android:layout_below="@+id/order_list_date_layout"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_above="@+id/order_list_layout_sumPrice_detail_order"
                    android:id="@+id/accountRecyclerView"
                    android:layout_height="match_parent"/>


                <LinearLayout
                    android:layout_below="@+id/accountRecyclerView"
                    android:layout_marginBottom="150dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layoutDirection="rtl"
                        android:id="@+id/order_list_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout

                    android:layout_marginBottom="1dp"
                    android:id="@+id/order_list_layout_sumPrice_detail_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:layout_marginRight="5dp"
                    android:background="@drawable/order_sum_price_order_list_layout"
                    android:elevation="@dimen/margin4"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="8sp">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/order_list_purePrice_tv"
                            android:layout_marginRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="جمع خالص"
                            android:textColor="@color/black_l"
                            android:textSize="11sp"/>

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:id="@+id/order_list_purePrice_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text=" 0 ریال"
                            android:textColor="@color/black_light"
                            android:textSize="11sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8sp">

                        <com.google.android.material.card.MaterialCardView
                            app:strokeWidth="1dp"
                            app:strokeColor="#E13D31"
                            app:cardCornerRadius="12dp"
                            android:layout_marginLeft="8dp"
                           android:backgroundTint="#fff"

                            android:id="@+id/order_list_payment"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"

                          >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_centerInParent="true"
                                    android:id="@+id/txtTypePayment"
                                    android:textSize="12sp"
                                    android:textColor="#E13D31"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="نوع پرداخت" />
                            </RelativeLayout>



                        </com.google.android.material.card.MaterialCardView>




                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/layout_botton"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8sp"
                        android:gravity="center">
                        <TextView
                            android:enabled="false"
                            android:layout_margin="@dimen/margin2"
                            android:layout_weight="0.5"
                            android:id="@+id/order_list_btn_register"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/order_sumprice_order_list_button_layout_offline"
                            android:gravity="center"

                            android:text="ثبت سفارش"
                            android:textColor="#fff"
                            android:textSize="12sp" />
                        <TextView
                            android:visibility="gone"
                            android:layout_margin="@dimen/margin2"
                            android:layout_weight="0.5"
                            android:id="@+id/order_seen_detail_invoice"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/order_item_recycle_group__card_background"
                            android:gravity="center"
                            android:text="مشاهده سفارش"
                            android:textColor="#fff"
                            android:textSize="12sp" />


                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/margin4"
                android:layout_marginRight="@dimen/margin4"
                android:background="#8a8a8a"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <RelativeLayout

                android:id="@+id/order_layout_main_food"
                android:layout_weight="6.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/order_toolbar_layout"
                    app:cardCornerRadius="@dimen/order_toolbar_layout_corner"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginRight="@dimen/margin8"
                            android:id="@+id/iv_search"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_search"
                            android:layout_alignParentRight="true"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <EditText
                            android:fontFamily="@font/iransans"
                            android:gravity="right"
                            android:id="@+id/edt_search_product"
                            android:textColor="#474747"
                            android:textSize="12sp"
                            android:layout_toLeftOf="@+id/iv_search"
                            android:hint="جستجوی نام کالا"
                            android:layout_centerVertical="true"
                            android:backgroundTint="@android:color/transparent"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>




                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/order_toolbar_layout"
                    android:layoutDirection="rtl"
                    android:id="@+id/order_recyclerView_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />

                <TextView
                    android:textColor="@color/black_l"
                    android:textSize="11sp"
                    android:id="@+id/order_txt_error"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/order_subgroup_layout_margin"
        android:layout_marginBottom="@dimen/order_subgroup_layout_margin"
        android:orientation="vertical"
        android:id="@+id/order_card_subGroup"
        android:background="@drawable/order_subgroup_layout_background"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        >

        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginBottom="@dimen/order_recycle_subgroup_top_bottom_margin"
            android:layout_marginTop="@dimen/order_recycle_subgroup_top_bottom_margin"
            android:id="@+id/order_recyclerView_productLevel2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout

        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/order_card_group"
        android:background="@color/white"
        android:layout_width="95dp"
        android:layout_height="match_parent"
      >
        <ImageView
            android:layout_margin="@dimen/order_group_layout_icon_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/order_img_logo"
            android:src="@drawable/ic_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <ImageView
            android:visibility="gone"
            android:layout_below="@+id/order_img_logo"
            android:layout_margin="@dimen/order_group_layout_icon_margin"
            android:layout_centerHorizontal="true"
            android:id="@+id/order_img_Always"
            android:src="@drawable/ic_favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"/>


        <ImageView
            android:visibility="gone"
            android:layout_below="@+id/order_img_Always"
            android:layout_margin="@dimen/order_group_layout_icon_margin"
            android:layout_centerHorizontal="true"
            android:id="@+id/order_img_invite_friend"
            android:src="@drawable/ic_heart"
            android:layout_width="35dp"
            android:layout_height="35dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="@dimen/order_recycle_group_top_bottom_margin"
            android:layout_marginTop="@dimen/order_recycle_group_top_bottom_margin"
            android:layout_below="@+id/order_img_invite_friend"
            android:id="@+id/order_recyclerView_productLevel2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </RelativeLayout>



</LinearLayout>