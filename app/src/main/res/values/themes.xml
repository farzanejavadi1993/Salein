<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Salein" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textViewStyle">@style/FontForWholeApp</item>

    </style>

    <style name="H7Right">
        <item name="android:gravity">end</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">#474747</item>
    </style>

    <style name="MyHelperTextInputLayout" >
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/medium_color</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:layoutDirection">ltr</item>
    </style>



    <style name="launcher_toolbar_TextView" >
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style parent="android:Widget.TextView"
        name="FontForWholeApp">
        <item name="fontFamily">@font/font</item>
    </style>





    <style name="H5Right">
        <item name="android:gravity">end</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13dp</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textColor">#474747</item>
    </style>


</resources>